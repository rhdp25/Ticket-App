  <div class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col">
          <div class="card">
            <div class="card-header card-header-primary">
              <h4 class="card-title">Add Show Time</h4>
            </div>
            <div class="card-body">
              <form action="" method="POST">
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label class="bmd-label-floating">Movie Title</label>
                      <select name="movie_id" id="movie_id" class="form-control" >
                        <option value="..." disabled>Select movie title...</option>
                        {{#each movies}}
                        <option value="{{this.id}}">{{this.title}}</option>
                        {{/each}}
                      </select>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Date Show</label>
                      <input type="date" name="date_show" class="form-control" >
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Time Show</label>
                      <input type="time" name="time_show" class="form-control" >
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label class="bmd-label-floating">Venue</label>
                      <select name="venue" id="venue" class="form-control">
                        <option disabled value="...">Select venue...</option>
                        <option data-price="30000" value="Dolby">Dolby</option>
                        <option data-price="40000" value="Dolby ATMOS">Dolby ATMOS</option>
                        <option data-price="50000" value="3D">3D</option>
                        <option data-price="60000" value="IMAX">IMAX</option>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label class="bmd-label-floating">Price (Rp)</label>
                      <input type="number" class="form-control" name="price" value=0>
                    </div>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary pull-right">Add Show Time</button>
                <div class="clearfix"></div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header card-header-primary">
              <h4 class="card-title ">List of Show Time</h4>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table">
                  <thead class=" text-primary">
                    <th>ID</th>
                    <th>Cover</th>
                    <th>Movie</th>
                    <th>Show</th>
                    <th>Venue</th>
                    <th>Price</th>
                    <th>‎ㅤ</th>
                  </thead>
                  <tbody>
                    {{#each showtimes}}
                    <tr>
                      <td>{{this.id}}</td>
                      <td><img src="/uploads/{{this.cover}}" style="max-width: 50px"></td>
                        <td>
                            {{this.title}}<br>
                            {{this.genre}}<br>
                            {{this.rating}}<br>
                            {{this.duration_min}} min
                        </td>
                        <td>
                            {{this.date_show}}<br>
                            {{this.time_show}} WIB
                        </td>
                      <td>{{this.venue}}</td>
                      <td>Rp {{this.price}}</td>
                      <td class="td-actions text-right">
                        <a href="/admin/showtime/edit/{{this.id}}" class="btn-primary btn-link">
                          <i class="material-icons">edit</i>
                        </a>
                        <a href="/admin/showtime/delete/{{this.id}}" class="btn-danger btn-link">
                          <i class="material-icons">close</i>
                        </a>
                      </td>
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script>
  $("#venue").on("change", function () {
    // get data from selected option
    const price = $("#venue option:selected").data("price");

    // show data to element
    $("[name=price]").val(price);
  });
</script>
