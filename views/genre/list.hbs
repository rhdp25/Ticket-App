    <div class="container-fluid">
      <div class="row">
        <div class="col">
          <div class="card">
            <div class="card-header card-header-primary">
              <h4 class="card-title">Add Genre</h4>
            </div>
            <div class="card-body">
              <form action="" method="POST">
                <div class="row">
                  <div class="col-md-10">
                    <div class="form-group">
                      <label class="bmd-label-floating">Genre</label>
                      <input type="text" class="form-control" name="genre">
                    </div>
                  </div>
                  <div class="col-md">
                    <button type="submit" class="btn btn-primary pull-right">Add Genre</button>
                  </div>
                </div>
                <div class="clearfix"></div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header card-header-primary">
              <h4 class="card-title ">List of Genre</h4>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table">
                  <thead class=" text-primary">
                    <th>ID</th>
                    <th>Genre</th>
                    <th>‎ㅤ</th>
                  </thead>
                  <tbody>
                    {{#each genres}}
                    <tr>
                      <td>{{this.id}}</td>
                      <td>{{this.genre}}</td>
                      <td class="td-actions text-right">
                        <a href="/admin/genre/edit/{{this.id}}" class="btn-primary btn-link">
                          <i class="material-icons">edit</i>
                        </a>
                        <a href="/admin/genre/delete/{{this.id}}" class="btn-danger btn-link">
                          <i class="material-icons">close</i>
                        </a>
                      </td>
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
