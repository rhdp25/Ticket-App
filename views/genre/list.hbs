{{> head}}
{{> navbar}}

{{#if message}}
  <div class="alert alert-{{message.type}}" role="alert">
    {{message.message}}
  </div>
{{/if}}

{{#if isLogin}}
<div class="container">
  <div class="row text-center m-3">
    <div class="col">
      <h2>Add Genre</h2>
    </div>
  </div>
  <form action="" method="POST">
    <div class="row justify-content-center text-center m-2">
      <div class="col">
        <div class="input-group mb-3">
          <input type="text" class="form-control" placeholder="Add new genre" name="genre" />
          <button class="btn btn-outline-secondary" type="submit">Add</button>
        </div>
      </div>
    </div>
  </form>
  <hr>
  <div class="row text-center m-3">
    <div class="col">
      <h2>List of Genre</h2>
    </div>
  </div>
  <div class="row m-2">
    {{#each genres}}
    <div class="col-4">
      <div class="row m-2">
        <div class="col">
          <span>ID {{this.id}} | </span>
          <span>{{this.genre}}</span>
        </div>
        <div class="col-4">
          <a href="/genre/edit/{{this.id}}"><img src="../static/icons/edit.png" alt="E"></a>
          <a href="/genre/delete/{{this.id}}"><img src="../static/icons/delete.png" alt="D"></a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
{{else}}

{{> notLogin}}

{{/if}}

{{> footer}}