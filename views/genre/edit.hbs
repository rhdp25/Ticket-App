{{> head}}
{{> navbar}}

{{#if message}}
  <div class="alert alert-{{message.type}}" role="alert">
    {{message.message}}
  </div>
{{/if}}

{{#if isLogin}}
<div class="container">
  <div class="row text-center m-3">
    <div class="col">
      <h2>Edit Genre</h2>
    </div>
  </div>
  <form action="/genre/edit/{{genres.id}}" method="POST">
    <div class="row justify-content-center text-center m-2">
      <div class="col">
        <input type="hidden" name="id" value={{genres.id}}>
        <div class="input-group m-2">
          <input type="text" class="form-control" placeholder="Add new genre" name="genre" value={{genres.genre}} />
          <button class="btn btn-outline-secondary" type="submit">Update</button>
        </div>
      </div>
    </div>
  </form>
</div>
{{else}}

{{> notLogin}}

{{/if}}

{{> footer}}